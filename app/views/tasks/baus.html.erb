<div class="dotted_backgroud">
  <div class="task_management">
<div class="nav_container">
  <ul>
    <li><%= link_to 'Calendar', tasks_calendar_path %></li>
    <li><%= link_to 'Huddle', tasks_huddle_path %></li>
    <li><%= link_to 'Dashboard', tasks_dashboard_path %></li>
    <li><%= link_to 'BAU', tasks_baus_path %></li>
    <li><%= link_to 'Projects', tasks_projects_path %></li>
    <li><%= link_to 'Issues', tasks_issues_path %></li>
  </ul>
</div>
</div>

<!-- <div class="view_container"> -->
  <div id="view_carousel">
    <% if @tasks.empty? %>
      No tasks yet.
    <% end %>
    <% @tasks.each do |task| %>
     <li>
      <%= link_to task_path task do%>
      <%= render 'tasks_card', task: task %>
      <% end %>
    </li>
    <% end %>
  </div>
</div>
<!-- </div> -->

<script type="text/javascript" src="http://code.jquery.com/jquery-1.9.1.min.js"></script>


<script type="text/javascript" src="<%= asset_path 'jquery.waterwheelCarousel.js'%>"></script>

<script>

$(document).ready(function () {
  $("#view_carousel").waterwheelCarousel({
    horizon: 110,
    horizonOffset: -50,
    horizonOffsetMultiplier: .7,
    separation: 250,
    edgeFadeEnabled: true,
    selector: 'li',
    preloadImages: false,
    clickedCenter: function(el) {
      window.location.href=el.children('a').attr('href');
    }
  });
});

</script>