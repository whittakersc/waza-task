<% if user_signed_in? %>

<div class="sticky_pull" id="pull">
		<%= image_tag("profile_pic.png", class: "profile_pic") %>
		<%= image_tag("profile_arrow.png", class: "profile_arrow") %>		
</div>

<div class="profile_container">
	<div class="profile_content">
		<div class="left_block">
		</div>
		<div class="right_block">
		</div>
		<div class="top_buttons">
			<button>View huddle Board</button>
		    <button>View Team List</button>		   
		    <% if user_signed_in? %>		        
		    <button><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></button>		        
		    <% end %>
		</div>
  </div>

</div>
<% end %>
<script>

$(".sticky_pull").click(function() {
  	$(".profile_content").toggleClass("profile_click");
  	console.log('Hello');
});

pully = $('#pull.sticky_pull');

$(function() {
           pully.mouseover(function() {
             $( '#pull' ).addClass( 'sticky_pull2' );
             $( '.profile_arrow' ).addClass( 'profile_arrow2' );
           });
       });

$(function() {
           pully.mouseout(function() {
             $( '#pull' ).removeClass( 'sticky_pull2' );
             $( '.profile_arrow' ).removeClass( 'profile_arrow2' );
           });
       });

</script>